<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Stimulus: <%= currentPage.title %> Example</title>
  <link rel="stylesheet" href="/main.css">
  <script src="/main.js" defer></script>
</head>

<body>
  <main>
    <div class="sidebar">
      <img src="/logo.svg" class="logo" alt="Stimulus logo" width="75" height="75">

      <ul class="nav">
        <% pages.forEach(page => { %>
          <li>
            <a href="<%= page.path %>" class="<%= page.path == currentPage.path ? " active " : " " %>">
              <%= page.title %>
            </a>
          </li>
          <% }) %>
      </ul>
    </div>

    <div class="container">
