{
  "name": "stimulus",
  "private": true,
  "version": "0.4.0",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "pretest": "yarn lint",
    "test": "lerna run --stream test",
    "clean": "rimraf dist packages/*/dist",
    "precompile": "yarn clean",
    "compile": "tsc",
    "predist": "yarn compile",
    "dist": "yarn dist:prepare && yarn dist:modules && yarn dist:types",
    "dist:prepare": "for dir in packages/*; do mkdir -p \"$dir/dist\"; done;",
    "dist:modules": "cd dist/packages && for package in *; do cp -R \"$package\" \"../../packages/$package/dist/module\"; done;",
    "dist:types": "cd dist/types && for package in *; do cp -R \"$package\" \"../../packages/$package/dist/types\"; done;",
    "prebuild": "yarn lint && yarn dist",
    "build": "lerna run build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/qunit": "^2.0.31",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-qunit": "^1.2.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-webpack": "^2.0.5",
    "lerna": "^2.4.0",
    "qunitjs": "^2.4.0",
    "rimraf": "^2.6.2",
    "ts-loader": "^3.0.2",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1"
  }
}
