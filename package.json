{
  "name": "stimulus",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "lerna run --scope @stimulus/examples --stream start",
    "clean": "rimraf dist packages/*/dist packages/*/**/dist",
    "lint": "tslint --project tsconfig.json",

    "pretest": "yarn clean && yarn lint",
    "test": "karma start",

    "precompile": "yarn clean",
    "compile": "tsc",

    "predist": "yarn compile",
    "dist": "node script/dist-to-packages.js",

    "prebuild": "yarn lint && yarn dist",
    "build": "lerna run build",

    "prerelease": "yarn build",
    "release": "lerna publish"
  },
  "workspaces": [
    "packages/*",
    "packages/@stimulus/*"
  ],
  "devDependencies": {
    "@types/qunit": "^2.0.31",
    "fs-extra": "^4.0.2",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-qunit": "^1.2.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-webpack": "^2.0.5",
    "lerna": "^2.4.0",
    "qunitjs": "^2.4.0",
    "rimraf": "^2.6.2",
    "ts-loader": "^3.0.2",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1"
  }
}
