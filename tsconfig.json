{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "scripthost"],
    "pretty": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "rootDir": "packages",
    "baseUrl": "packages",
    "declaration": false,
    "paths": {
      "*": ["*/src", "*"]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/index.ts"
  ]
}
